    <script>
        @if (Session::has('message'))
            var type = "{{ Session::get('alert-type', 'info') }}";
            var message = "{{ Session::get('message') }}";

            function showToast(type, message, color) {
                Toastify({
                    text: message,
                    duration: 3000,
                    newWindow: true,
                    close: true,
                    gravity: "top",
                    position: "right",
                    stopOnFocus: true,
                    style: {
                        background: color
                    },
                    onClick: function() {}
                }).showToast();
            }

            switch (type) {
                case 'info':
                    showToast(type, message, "blue");
                    break;
                case 'success':
                    showToast(type, message, "green");
                    break;
                case 'warning':
                    showToast(type, message, "orange");
                    break;
                case 'error':
                    showToast(type, message, "red");
                    break;
            }
        @endif
    </script>


